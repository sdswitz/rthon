# Include C extension source and header files
recursive-include src/rthon/regression/_c_ext *.c *.h

# Include documentation and configuration files
include README.md
include LICENSE
include pyproject.toml
include setup.py
include Makefile

# Include test files
recursive-include tests *.py

# Include build and integration test files  
include build_extension.py
include test_integration.py

# Exclude build artifacts
prune build
prune dist
global-exclude *.pyc
global-exclude *.so
global-exclude __pycache__